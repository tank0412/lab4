<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="lab4">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>pip.lab4.orm.User</class>
        <class>pip.lab4.orm.Group</class>
        <class>pip.lab4.orm.Point</class>

        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:orcl2"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="eclipselink.jdbc.user" value="SYSTEM"/>
            <property name="eclipselink.jdbc.password" value="admin"/>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>

</persistence>
